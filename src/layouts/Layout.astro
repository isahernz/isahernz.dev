---
import "@fontsource-variable/onest";
import { ViewTransitions } from "astro:transitions";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta
      name="description"
      content="Desarrollador Full Stack y Estudiante de Ingeniería en Sistemas en la Benemérita Universidad Autónoma de Puebla. Apasionado por la tecnología y las últimas tendencias en desarrollo web. Este es el espacio donde comparto mi evolución como ingeniero, los proyectos que he desarrollado y los conocimientos que he adquirido a través de mi blog personal."
    />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#3b82f6" />

    <link rel="canonical" href="https://brandonhernandez-dev.vercel.app/" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="flex flex-col px-4 mx-auto sm:max-w-xl lg:max-w-4xl lg:px-0 xl:max-w-5xl z-[-2] bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] bg-no-repeat"
  >
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
      }
      body {
        background: #050505;
      }
    </style>
  </body>
</html>
