---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
>
</div>
<time class="mb-1 text-base font-normal leading-none text-sky-200">{date}</time>
<h3 class="text-lg md:text-xl font-semibold text-yellow-200 mt-2 mb-1">
  {title}
</h3>
<p class="mb-4 text-sm md:text-lg text-gray-200 text-pretty">
  {description}
</p>
